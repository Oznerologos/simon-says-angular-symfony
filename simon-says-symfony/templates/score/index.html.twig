{% extends 'base.html.twig' %}

{% block title %}Score index{% endblock %}

{% block body %}
    <h1>Score index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Date</th>
                <th>Time</th>
                <th>Score</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for score in scores %}
            <tr>
                <td>{{ score.id }}</td>
                <td>{{ score.username }}</td>
                <td>{{ score.date }}</td>
                <td>{{ score.time }}</td>
                <td>{{ score.score }}</td>
                <td>
                    <a href="{{ path('score_show', {'id': score.id}) }}">show</a>
                    <a href="{{ path('score_edit', {'id': score.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('score_new') }}">Create new</a>
{% endblock %}
